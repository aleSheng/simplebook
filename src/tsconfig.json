{
  "compilerOptions": {
    "outDir": "../simplebook/build",
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "types": []
  },
  "include": ["*", "filebrowser/*", "components/*", "notebook/*"]
}
